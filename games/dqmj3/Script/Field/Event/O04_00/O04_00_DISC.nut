	// ID初期化
	g_mine_epitaph <- C_NONE_ID;
	
	// ■なぞの碑文
	g_mine_epitaph = SetPointCircleEventMine_("mine_epitaph", true);
	
	
	//-------------------------
	// ▼リアクターポイント配置
